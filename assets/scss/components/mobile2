/* 夜间模式特定调整 */
@media (prefers-color-scheme: dark) {
  .friends-post {
    background: var(--hera-background-gray-lightest);
  }
  
  .friends-thumbnail {
    background: rgba(255, 255, 255, 0.05);
  }
  
  .friends-more {
    color: var(--hera-text-gray);
  }
  
  .friends-avatar-sm {
    border-color: var(--hera-border-color);
  }
  
  .friends-tag:hover {
    background: rgba(82, 82, 91, 0.3);
  }
}

